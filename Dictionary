dictionary = {
    "python": "A high-level programming language",
    "algorithm": "A step-by-step procedure to solve a problem",
    "data": "Facts and information used for analysis"
}
def show_menu():
    print("\nüìò Dictionary App")
    print("1. Search a word")
    print("2. Add a new word")
    print("3. Update a word")
    print("4. Delete a word")
    print("5. View all words")
    print("6. Exit")
while True:
    show_menu()
    choice = input("Enter your choice (1-6): ")
    if choice == "1":
        word = input("Enter word to search: ").lower()
        if word in dictionary:
            print(f"Meaning: {dictionary[word]}")
        else:
            print("‚ùå Word not found")
    elif choice == "2":
        word = input("Enter new word: ").lower()
        if word in dictionary:
            print("‚ö†Ô∏è Word already exists")
        else:
            meaning = input("Enter meaning: ")
            dictionary[word] = meaning
            print("‚úÖ Word added successfully")
    elif choice == "3":
        word = input("Enter word to update: ").lower()
        if word in dictionary:
            meaning = input("Enter new meaning: ")
            dictionary[word] = meaning
            print("‚úÖ Word updated successfully")
        else:
            print("‚ùå Word not found")
    elif choice == "4":
        word = input("Enter word to delete: ").lower()
        if word in dictionary:
            del dictionary[word]
            print("‚úÖ Word deleted successfully")
        else:
            print("‚ùå Word not found")
    elif choice == "5":
        if dictionary:
            print("\nüìñ Words in Dictionary:")
            for word, meaning in dictionary.items():
                print(f"{word} : {meaning}")
        else:
            print("Dictionary is empty")
    elif choice == "6":
        print("üëã Exiting Dictionary App")
        break
    else:
        print("‚ö†Ô∏è Invalid choice! Please enter 1-6")
